@model NewsProject.Controllers.NewsViewModel

@{
    ViewData["Title"] = "Haberler";
}

    <h2 class="pagination d-flex justify-content-center">Anasayfa</h2>



@foreach (var item in Model.ItemLists)
{
    <div class="news-item">
        <h4>@item.title</h4>
        <p>@item.shortText</p>
        <hr />
    </div>
}

<div class="pagination d-flex justify-content-center">
    <span class="mr-2">Sayfa @(Model.CurrentPage) / @Model.TotalPages<br></span>
   
</div>
<div class ="pagination d-flex justify-content-center">
    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        <a href="/News/Index?page=@i" class="mx-1">@i. Sayfa  </a>
    }
</div>
